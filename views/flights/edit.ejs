<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/public/flights/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <input autocomplete="off" type="text" name="airline" id="airline-input">
    <label for="airport-input">Airport:</label>
    <input autocomplete="off" type="text" name="airport" id="airport-input">
    <label for="flightNo">Flight Number:</label>
    <input autocomplete="off" type="number" name="flightNo" id="flightNo-input">
    <label for="departs-input">Departures:</label>
    <input autocomplete="off" type="date" name="departs" id="departs-input">
    <button type="submit">Save Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>