<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/edit.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <select value="<%= flight.airline %>" selected name="airline" id="airline-input">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
    <label for="airport-input">Airport:</label>
    <select value="<%= flight.airport %>" selected name="airport" id="airport-input">
      <option value="DEN">DEN</option>
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flightNo">Flight Number:</label>
    <input value="<%= flight.flightNo %>" autocomplete="off" type="number" name="flightNo" id="flightNo-input">
    <label for="departs-input">Departures:</label>
    <input value="<%= departsDate %>" autocomplete="off" type="date" name="departs" id="departs-input">
    <button type="submit">Save Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>